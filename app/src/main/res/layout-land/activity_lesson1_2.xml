<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/app_padding"
    tools:context=".lessons1_2.ActivityLessons1_2">

    <Button
        android:id="@+id/activityLesson1_2_btnToast"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/activityLesson1_2_btnToast_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/activityLesson1_2_tvCount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/app_padding"
        android:text="@string/activityLesson1_2_tvCount_text"
        android:textSize="@dimen/activityMain_tvCount_textSize"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/teal_200"
        app:layout_constraintStart_toEndOf="@id/activityLesson1_2_btnCount"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/activityLesson1_2_btnCount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/activityLesson1_2_btnCount_title"
        android:layout_marginStart="@dimen/app_padding"
        app:layout_constraintStart_toEndOf="@id/activityLesson1_2_btnToast"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>