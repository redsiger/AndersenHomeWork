<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    ActivityLesson3Part2        -->
    <style name="FlagTitle">
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/app_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FlagLine">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FlagLineVertical" parent="FlagLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FlagLineHorizontal" parent="FlagLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!--    ActivityLesson6        -->
    <style name="ContactItemFieldLabel">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="ContactItemField">
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

    <style name="ContactItemFieldLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ContactDetailFieldLabel">
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ContactDetailField">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/contact_details_default_margin</item>
    </style>

</resources>